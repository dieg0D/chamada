<%= render 'shared/navbar'%>

<p id="notice"><%= notice %></p>
<div class = "container pb-3 pt-4">

  <h3>
  <%= link_to 'Todos', users_path, class: 'badge badge-pill badge-success' if @core.nil? %>
  <%= link_to 'Todos', users_path, class: 'badge badge-pill badge-secondary' if !@core.nil? %>

  <%= link_to 'NDP', users_path(core: "NDP"), class: 'badge badge-pill badge-success' if @core == "NDP" %>
  <%= link_to 'NDP', users_path(core: "NDP"), class: 'badge badge-pill badge-secondary' if @core != "NDP" %>

  <%= link_to 'NUT', users_path(core: "NUT"), class: 'badge badge-pill badge-success' if @core == "NUT" %>
  <%= link_to 'NUT', users_path(core: "NUT"), class: 'badge badge-pill badge-secondary' if @core != "NUT" %>

  <%= link_to 'NOE', users_path(core: "NOE"), class: 'badge badge-pill badge-success' if @core == "NOE" %>
  <%= link_to 'NOE', users_path(core: "NOE"), class: 'badge badge-pill badge-secondary' if @core != "NOE" %>

  <%= link_to 'BOPE', users_path(core: "NAM_BOPE"), class: 'badge badge-pill badge-success' if @core == "NAM_BOPE" %>
  <%= link_to 'BOPE', users_path(core: "NAM_BOPE"), class: 'badge badge-pill badge-secondary' if @core != "NAM_BOPE" %>
  
  <%= link_to 'Marketing', users_path(core: "NAM_Marketing"), class: 'badge badge-pill badge-success' if @core == "NAM_Marketing" %>
  <%= link_to 'Marketing', users_path(core: "NAM_Marketing"), class: 'badge badge-pill badge-secondary' if @core != "NAM_Marketing" %>

  <%= link_to 'Nenhum Núcleo', users_path(core: "nenhum"), class: 'badge badge-pill badge-success' if @core == "nenhum" %>
  <%= link_to 'Nenhum Núcleo', users_path(core: "nenhum"), class: 'badge badge-pill badge-secondary' if @core != "nenhum" %>
  </h3>

  <br>
  <table class ="table table-striped" >
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Membro</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.order(:nome).each do |user| %>
        <tr>
          <td><%= user.nome %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.membro == true %>
              <span class="badge badge-success mr-1 d-block">Membro</span>
            <% end %>
            <% if user.membro == false %>
              <span class="badge badge-danger mr-1 d-block">Trainee</span>
            <% end %>
        </td>
          <td><%= link_to 'Editar', edit_user_path(user), class: 'text-primary btn-sm' %></td>
          <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo', new_user_path, class: 'btn float-right btn-primary mr-3 mb-4 px-4' %>
</div>