<%= render 'shared/navbar'%>

<div class = "container pb-3 pt-4">
   <h3><span class="badge badge-pill badge-success">Lista de Membros</span></h3>
  <br>

  <table class ="table table-responsive-sm table-responsive-md table-hover" >
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Membro</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.order(:nome).each do |user| %>
        <% if user.membro == true %>
            <tr>
              <td><%= user.nome %></td>
              <td><%= user.email %></td>
              <td>
                  <span class="badge badge-pill badge-success mr-1 d-block">Membro</span>
              </td>
              <td><%= link_to 'HistÃ³rico', user_path(user), class: 'text-primary btn-sm' %></td>
              <td><%= link_to 'Editar', edit_user_path(user), class: 'text-primary btn-sm' %></td>
              <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger btn-sm" %></td>
            </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex w-100 justify-content-center my-4">
    <%= link_to 'Novo', new_user_path, class: 'btn btn-primary mr-3 px-5' %>
  </div>
</div>