<%= render 'shared/navbar'%>

<p id="notice"><%= notice %></p>
<div class = "container pb-3 pt-4">
   <h3><span class="badge badge-pill badge-warning">Administradores</span></h3>
  <br>

  <table class ="table table-hover" >
    <thead>
      <tr>
        <th colspan="3">Email</th>
      </tr>
    </thead>

    <tbody>
      <% @admins.order(:email).each do |a| %>
        <tr>
            <td class="<%= 'text-primary' if a == current_admin %>"> <%= a.email %> </td>
            <td> <%= link_to 'Editar', edit_admin_path(a), class: 'text-warning' %> </td>
            <td> <%= link_to 'Excluir', admin_registration_path(a), method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="d-flex w-100 justify-content-center my-4">
    <%= link_to 'Novo', new_admin_path, class: 'btn btn-primary mr-3 px-5' %>
  </div>
</div>