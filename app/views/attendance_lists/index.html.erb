<%= render 'shared/navbar'%>
<div class = "container pb-3 pt-4">
  <h3><span class="badge badge-pill badge-success">Listas de Chamada</span></h3>
  <br>

    <table class ="table table-hover">
    <thead>
      <tr>
        <th>Data</th>
        <th>Tipo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @attendance_lists.each do |attendance_list| %>
        <tr>
          <td><%= attendance_list.created_at.strftime("%d/%m/%y")%></td>
          <td><%= attendance_list.type.name %></td>
          <td><%= link_to 'Mostrar', attendance_list, class: 'text-primary btn-sm'%></td>
          <td><%= link_to 'Editar', edit_attendance_list_path(attendance_list), class: 'text-primary btn-sm'%></td>
          <td><%= link_to 'Excluir', attendance_list, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova lista de chamada', new_attendance_list_path, class: 'btn btn-primary float-right mr-3 px-4' %>
</div>


